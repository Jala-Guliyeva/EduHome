@model UpCommingEvent
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/AdminF/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <div class="row">
         <form method="post" class="forms-sample">
                    <div class="form-group">
                      <label asp-for="Month" ></label>
                      <input asp-for="Month" type="date" class="form-control"  placeholder="Month">
                    </div>
                    <div class="form-group">
                      <label asp-for="Day"></label>
                      <input asp-for="Day" type="date" class="form-control"  placeholder="Day">
                    </div>
                    <div class="form-group">
                      <label asp-for="Title"></label>
                      <input asp-for="Title" type="text" class="form-control" placeholder="Title">
                      <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                       <div class="form-group">
                      <label asp-for="Location"></label>
                      <input asp-for="Location" type="text" class="form-control" placeholder="Location">
                    </div>
                       <div class="form-group">
                      <label asp-for="StartTime"></label>
                      <input asp-for="StartTime" type="time" class="form-control" placeholder="StartTime">
                    </div>
                    <div class="form-group">
                      <label asp-for="EndTime" ></label>
                      <input asp-for="EndTime" type="time" class="form-control" placeholder="EndTime">
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Update</button>
                  </form>
    </div>
</div>
@section Scripts{
    <partial name="_Validation"/>
}

